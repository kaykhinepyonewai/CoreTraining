@model CoreTraining.Entities.DTO.UserEditViewModel;
@{
}
<div class="container-xl px-4 mt-5">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            
            <div class="col-xl-4 text-center">
                       <img src="@Url.Content("~/images/profile/" + Model.ProfileName)"  class="profileImage mb-5" alt="@Model.ProfileName" />
                <input type="file" class="form-control-file text-center w-50 mx-5 mb-5" id="profileImage" name="ProfileImage" />
            </div>
            <div class="col-xl-8">
              
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-4">
                                <input asp-for="FirstName" class="form-control" placeholder="john" maxlength="100" />
                                <label asp-for="FirstName"></label>
                                <div class="invalid-feedback">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating mb-4">
                                <input asp-for="LastName" class="form-control" placeholder="doe" maxlength="100" />
                                <label asp-for="LastName"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-4">
                                <input asp-for="Email" class="form-control" placeholder="xxx@example.com" />
                                <label asp-for="Email"></label>
                                <div class="invalid-feedback">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating mb-4">
                                <input asp-for="PhoneNumber" class="form-control" placeholder="xxxxxx" />
                                <label asp-for="PhoneNumber"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col">
                            <div class="form-floating mb-4">
                                <input type="date" asp-for="DOB" class="form-control" />
                                <label asp-for="DOB"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-4">
                                <textarea asp-for="Address" class="form-control" placeholder="xxxxxx"></textarea>
                                <label asp-for="Address"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-outline-dark ">Update Profile</button>
                        </div>
                    </div>
                    @if (Model.ResponseModel != null)
                    {
                        <div class="row">
                            <div class="col">
                                <div class="alert alert-dark mt-3 text-center">
                                    @Model.ResponseModel.Message
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
            </form>
    </div>
<link href="~/css/style.css" rel="stylesheet" />
   
@section Scripts
{

    <partial name="_ValidationScriptsPartial" />

}
