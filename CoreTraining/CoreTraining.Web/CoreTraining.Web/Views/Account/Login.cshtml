@model CoreTraining.Entities.DTO.LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="container-fluid login">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-8 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header mt-3">
                    <h3 class="text-center">Login</h3>
                    <div asp-validation-summary="All" class="validate"></div>
                </div>
                <div class="card-body">
                    <form method="post" class="form_login">
                        <div class="form-group">
                            <label asp-for="Email" class="mb-2">Email  :  <i class="fa fa-envelope icon" aria-hidden="true"></i></label>
                            <input asp-for="Email" class="form-control" placeholder="xxx@example.com" />
                            
                            <div class="invalid-feedback">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password : <i class="fa fa-key icon" aria-hidden="true"></i></label>
                            <input asp-for="Password" class="form-control" placeholder="xxxxxxx" />
                           
                            <div class="invalid-feedback">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                       
                        <div class="text-center">
                            <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a>
                        </div>


                        <div class="text-center">
                            <a asp-area="" asp-controller="Account" asp-action="Register">Don't have an account?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}