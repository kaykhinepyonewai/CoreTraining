@model CoreTraining.Entities.DTO.ForgotPasswordViewModel;
@{

	ViewData["Title"] = "Forgot Password";
}

<div class="container">
	<div class="row">
		<div class="col-md-4 offset-md-4">
			
			<form asp-action="ForgotPassword" class="forgotForm">
				<h2 class="mb-5">Forgot Password</h2>
				<p class="mb-5">Please enter your email address to reset your password.</p>
				<div class="form-group">
					<label asp-for="Email" class="mb-2">Email  :  <i class="fa fa-envelope icon" aria-hidden="true"></i></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger" placeholder="xxx@example.com"></span>
				</div>
				
				<div class="form-group">
					<input type="submit" value="Send" class="btn btn-primary btn-block" />
				</div>

				<div class="text-center mt-3">
					<a asp-area="" asp-controller="Account" asp-action="LogIn">Back to Login</a>
				</div>

				@if (!ViewData.ModelState.IsValid)
				{
					<div asp-validation-summary="All" class="alert alert-primary mt-3"></div>
				}
			</form>
		</div>
	</div>
</div>



