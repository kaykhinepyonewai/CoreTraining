@model CoreTraining.Entities.DTO.ResetPasswordViewModel;
@{
}

<div class="container-fluid h-100 mt-5 ">
    <div class="row justify-content-center align-items-center h-100 reset">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-4">

            <h3 class="mb-3">Register</h3>
            <div asp-validation-summary="All" class="validate"></div>
            <form method="post">

                <div class="form-floating mb-4">
                    <input asp-for="NewPassword" class="form-control" placeholder="xxxxxxx" />
                    <label asp-for="NewPassword" class="form-label"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="xxxxxxx" />
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-outline-dark">Reset Password</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-area="" asp-controller="Account" asp-action="LogIn">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
