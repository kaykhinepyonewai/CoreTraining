@model CoreTraining.Entities.DTO.PostViewModel;
@{
}

<div class="container-fluid h-100 mt-5">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-4">

            <h3 class="mb-4 mt-5">Edit Post</h3>
            <div asp-validation-summary="All" class="validate" id="hideValidate"></div>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-floating mb-4">
                    <input asp-for="Title" class="form-control" id="inputValidate" placeholder="john" maxlength="100" />
                    <label asp-for="Title"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating mb-4">
                    <textarea asp-for="Description" class="form-control" placeholder="john" maxlength="100"></textarea>
                    <label asp-for="Description"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="IsPublished">
                    <label class="form-check-label" asp-for="IsPublished">Publish?</label>
                </div>


                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-outline-dark">Update</button>
                        <a class="btn btn-outline-danger" asp-controller="Post" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
}